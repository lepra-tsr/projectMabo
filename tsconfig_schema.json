{
  "compilerOptions": {
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "alwaysStrict": true,
    "newLine": "LF",
    "allowJs": true,
    "baseUrl": ".",
    "outDir": "./schema/",
    "sourceMap": false,
    "lib": [
      "dom",
      "ES2018"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5"
  },
  "include": [
    "./src/schema"
  ],
  "exclude": [
    "./src/client",
    "./src/server",
  ]
}